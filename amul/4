 revert b,
 induction c,
 intros b beq,
 rw mul_zero at beq,
 have bee := eq_zero_or_eq_zero_of_mul_eq_zero _ _ beq,
 cases bee,
 exfalso, exact ha(bee), exact bee,
 intros b beq,
 rw mul_succ at beq,
 cases b, exfalso,
 rw mul_zero at beq, symmetry at beq,
 have a0 := add_left_eq_zero beq, exact ha(a0),
 rw mul_succ at beq, 
 have beq2 := add_right_cancel _ _ _ beq,
 have inductive_discharged := succ_eq_succ_of_eq (c_ih b beq2),
 exact inductive_discharged,